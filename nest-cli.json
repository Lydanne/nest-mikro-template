{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/nest-mikro-template/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/nest-mikro-template/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/nest-mikro-template",
  "projects": {
    "nest-mikro-template": {
      "type": "application",
      "root": "apps/nest-mikro-template",
      "entryFile": "main",
      "sourceRoot": "apps/nest-mikro-template/src",
      "compilerOptions": {
        "tsConfigPath": "apps/nest-mikro-template/tsconfig.app.json"
      }
    },
    "app": {
      "type": "application",
      "root": "apps/app",
      "entryFile": "main",
      "sourceRoot": "apps/app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/app/tsconfig.app.json"
      }
    },
    "redis": {
      "type": "library",
      "root": "libs/redis",
      "entryFile": "index",
      "sourceRoot": "libs/redis/src",
      "compilerOptions": {
        "tsConfigPath": "libs/redis/tsconfig.lib.json"
      }
    },
    "boot": {
      "type": "library",
      "root": "libs/boot",
      "entryFile": "index",
      "sourceRoot": "libs/boot/src",
      "compilerOptions": {
        "tsConfigPath": "libs/boot/tsconfig.lib.json"
      }
    },
    "config": {
      "type": "library",
      "root": "libs/config",
      "entryFile": "index",
      "sourceRoot": "libs/config/src",
      "compilerOptions": {
        "tsConfigPath": "libs/config/tsconfig.lib.json"
      }
    }
  }
}